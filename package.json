{
  "name": "discord-deleter",
  "version": "1.0.1",
  "description": "A GUI tool to clean Discord messages. Core deletion script by Jerexx, GUI and packaging by mandiyama.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "discord",
    "message",
    "cleaner",
    "deleter",
    "gui",
    "electron"
  ],
  "author": {
    "name": "Jerexx",
    "email": "jerrxx@disroot.org",
    "role": "Core script"
  },
  "contributors": [
    {
      "name": "mandiyama",
      "email": "mandiyama@ya.ru",
      "role": "GUI development, application packaging, Electron integration"
    }
  ],
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "tw.discord.deleter",
    "productName": "Discord Deleter",
    "copyright": "Jerexx & mandiyama",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{src,build,scripts,documentation}"
    ],
    "extraMetadata": {
      "credits": "Core deletion script by Jerexx, GUI and packaging by mandiyama"
    },
    "win": {
      "target": [ "portable", "nsis" ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "portable": {
      "artifactName": "${productName} Portable ${version}.exe"
    }
  }
}
